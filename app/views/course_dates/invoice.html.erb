<div class="container">

  <%= simple_form_for @invoice, :url => send_invoice_course_course_date_path(@course,@course_date) do |f| %>
    <div class="col-md-8">
      <div class="col-md-12">
        <br />
        <h3>Invoice Details</h3>
      </div>
      <div class="col-md-6">
        <%= f.input :organisation_name, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :contact_person, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :address_line_1, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :address_line_2 %>
      </div>
      <div class="col-md-6">
        <%= f.input :town, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :county, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :postcode, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :telephone_no, :required => true %>
      </div>
      <div class="col-md-12">
        <br />
        <h3>Attendee Details</h3>
      </div>
      <div class="col-md-6">
        <%= f.input :name, :required => true %>
      </div>
      <div class="col-md-6">
        <%= f.input :email, :required => true %>
      </div>
      <br />
    </div>

    <div class="col-md-12">
      <br />
      <%= f.button :submit, "Submit" %>
    </div>
  <% end %>
</div>
